generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Session {
  id        String   @id @default(cuid())
  sid       String   @unique
  data      String
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id                   Int    @id @default(autoincrement())
  taxDocument          String @unique
  username             String @unique
  password             String
  firstName            String
  lastName             String
  email                String @unique
  phone                String @unique
  profileImage         String
  state                String?
  city                 String?
  neighborhood         String?
  postalCode           String?
  role                 String
  workdays             String[] @default([])
  car                  Car[]
  passwordResetToken   String?
  passwordResetExpires DateTime?
}

model Car {
  id           Int    @id @default(autoincrement())
  userId       Int
  user         User   @relation(fields: [userId], references: [id])
  registration String @unique
  model        String
  year         String
  color        String
  height       Float
  width        Float
  depth        Float
  capacity     Float
  category     String
  delivery     Delivery[]
  carImage     CarImage[]
}

model CarImage {
  id        Int      @id @default(autoincrement())
  carId     Int
  car       Car      @relation(fields: [carId], references: [id])
  imageUrl  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Delivery {
  id          Int      @id @default(autoincrement())
  carId       Int
  car         Car      @relation(fields: [carId], references: [id])
  protocol    String   @unique
  price       Float
  fee         Float
  status      String
  origin      String
  destination String
  createdAt   DateTime @default(now())
}
